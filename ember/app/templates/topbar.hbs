<ul class="title-area">
  <li class="name">
    <h1>
      {{#link-to 'application'}}
        {{app.name}}
      {{/link-to}}
    </h1>
  </li>
  <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
  <li class="toggle-topbar menu-icon">
    <a href="#"><span>Menu</span></a>
  </li>
</ul>

<section class="top-bar-section">
  <ul class="right">

    <li class="divider"></li>

    <li class="has-dropdown not-click">

      <a href="javascript://">
        {{#if session.user}}
          {{user-avatar subject=session.user class='size-24'}}
          {{session.user.displayName}}
        {{else}}
          Login&nbsp;/&nbsp;Signâ€“up
        {{/if}}
      </a>

      <ul class="dropdown">
        {{#if session.user}}
          <li>
            <label>Linked accounts:</label>
          </li>
          {{#each sessionUserPassports}}
            <li>
              <a href="javascript://">
                {{passport-icon subject=this class='right'}}
                {{user-avatar subject=this}} {{this.displayName}}
              </a>
            </li>
          {{/each}}
        {{/if}}
        <li class="row">
          <label>
            {{#if session.user}}
              Link another account:
            {{else}}
              Login/sign-up using:
            {{/if}}
          </label>
        </li>
        <li>
          <div class="no-wrap">
            {{#each passportTypes}}
              <a {{bind-attr href=authUrl}} class="button tiny">
                {{passport-icon subject=this}}
              </a>
            {{/each}}
          </div>
        </li>
        {{#if session.user}}
          <li>
            <a href="/logout">Logout</a>
          </li>
        {{/if}}
      </ul>

    </li>
  </ul>
</section>
